server {
    listen 80;
    listen [::]:80;
    server_name claus.lol www.claus.lol;

    return 301 https://claus.lol$request_uri;

    location / {
        try_files $uri $uri/ =404;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name claus.lol;

    ssl_certificate     /etc/letsencrypt/live/claus.lol/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/claus.lol/privkey.pem;

   root /srv/www/clauslol/current;
   index index.html;

    location / {
        try_files $uri $uri/ =404;
    }
    location /error-test {
	proxy_pass http://127.0.0.1:9999;
    }
}

# Staging
server {
    listen 80;
    listen [::]:80;
    server_name staging.claus.lol;

    return 301 https://staging.claus.lol$request_uri;

    location / {
        try_files $uri $uri/ =404;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name staging.claus.lol;

    ssl_certificate     /etc/letsencrypt/live/claus.lol/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/claus.lol/privkey.pem;

   root /srv/www/clauslol/staging;
   index index.html;

    location / {
        try_files $uri $uri/ =404;
    }
}
